    {
      "id": "feature1",
      "type": "composite",
      "duration": 12,
      "layers": [
        {
          "type": "image",
          "content": {
            "src": "examples/product-intro-video/feature1.png",
            "fit": "contain",
            "position": { "x": "center", "y": "center" }
          }
        },
        {
          "type": "text",
          "content": {
            "text": "シンプルな設定",
