{
  "version": "1.0.0",
  "name": "Kumiki Product Introduction",
  "settings": {
    "resolution": "1920x1080",
    "fps": 30,
    "narrationDefaults": {
      "voice": {
        "languageCode": "ja-JP",
        "name": "Kore",
        "speakingRate": 1.0,
        "pitch": 0
      },
      "timing": {
        "delay": 0.5,
        "fadeIn": 0,
        "fadeOut": 0.3
      },
      "volumeMix": {
        "narration": 0.8,
        "bgm": 0.3
      }
    }
  },
  "audio": {
    "backgroundMusic": {
      "src": "examples/product-intro-video/bgm.mp3",
      "volume": 0.3,
      "fadeIn": 2,
      "fadeOut": 3
    }
  },
  "scenes": [
    {
      "id": "opening",
      "type": "text",
      "duration": 3,
      "content": {
        "text": "Kumiki",
        "style": {
          "fontSize": 96,
          "fontFamily": "Arial Black, sans-serif",
          "fontWeight": "900",
          "color": "#F97316",
          "textAlign": "center"
        },
        "position": {
          "x": "center",
          "y": "center"
        }
      },
      "background": {
        "type": "gradient",
        "value": "linear-gradient(135deg, #121212 0%, #2a2a2a 100%)"
      }
    },
    {
      "id": "problem",
      "type": "composite",
      "duration": 7,
      "background": {
        "type": "gradient",
        "value": "linear-gradient(135deg, #121212 0%, #2a2a2a 100%)"
      },
      "layers": [
        {
          "type": "image",
          "content": {
            "src": {
              "type": "generate",
