{
  "version": "1.0.0",
  "name": "Animation Test Project",
  "settings": {
    "resolution": "1920x1080",
    "fps": 30
  },
  "scenes": [
    {
      "id": "text-fade-in",
      "type": "text",
      "duration": 3,
      "content": {
        "text": "This text fades in",
        "style": {
          "fontSize": 72,
          "color": "#FFFFFF",
          "fontFamily": "Arial",
          "fontWeight": "bold",
          "textAlign": "center"
        },
        "position": {
          "x": "center",
          "y": "center"
        }
      },
      "background": {
        "type": "gradient",
        "value": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
      },
      "animation": {
        "type": "fade-in",
        "duration": 1.5
      }
    },
    {
      "id": "image-fade-out",
      "type": "image",
      "duration": 3,
      "content": {
        "src": "examples/assets/sample-image.png",
        "fit": "cover",
        "position": {
          "x": "center",
          "y": "center"
        }
      },
      "animation": {
        "type": "fade-out",
        "duration": 1.0
      }
    },
    {
      "id": "text-both-fade",
      "type": "text",
      "duration": 5,
      "content": {
        "text": "This text fades in and out",
        "style": {
          "fontSize": 60,
          "color": "#FFD700",
          "fontFamily": "Georgia",
          "textAlign": "center"
        },
        "position": {
          "x": "center",
          "y": "center"
        }
      },
      "background": {
        "type": "color",
        "value": "#1a1a1a"
      },
      "animation": {
        "type": "fade-in",
        "duration": 2.0
      }
    }
  ]
}