{
  "name": "kumiki",
  "version": "0.1.0",
  "description": "A video generation tool that creates videos from JSON configurations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "kumiki": "./dist/cli.js"
  },
  "scripts": {
    "dev": "npm run generate:schema && tsx src/cli.ts",
    "build": "npm run generate:schema && tsc",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "npm run generate:schema && tsc --noEmit",
    "generate:schema": "tsp compile src/schemas/kumiki.tsp",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "video",
    "generation",
    "ffmpeg",
    "animation"
  ],
  "author": "Kenta Imai",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "p-queue": "^8.0.1",
    "puppeteer": "^24.14.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@typespec/compiler": "^1.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typespec-zod": "^0.0.0-52",
    "vitest": "^1.1.0"
  }
}
